{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="box-login-p-login">
        <h1 class="h3 mb-3 font-weight-normal sign-in-h1 mt-5 mb-5">Se connecter</h1>
        <label for="inputEmail">Email</label>
        <div class="container mb-3">
            <div class="row">
        <div class="col-lg">
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>
            </div>
        </div>

        <label for="inputPassword">Mot de passe</label>
        <div class="container">
            <div class="row">
        <div class="col-lg">
        <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>
            </div>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <div class="align-button-login">
            <button class="btn btn-lg btn-primary mt-3 mb-5" type="submit">
                S'identifier
            </button>
        </div>
        <div>
            <h2 class="avis-not-sub-login">Pas encore inscrit? Cliquez sur le bouton ci-dessous pour cr√©er un compte</h2>
            <a class="btn btn-lg btn-primary mt-3" href="{{ path('app_register') }}">S'inscrire</a>
        </div>
    </div>
</form>

{% endblock %}
